generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                        String           @id @default(uuid())
  email                     String           @unique
  password                  String?          // Ahora es opcional para usuarios OAuth
  firstName                 String?          // Opcional para OAuth
  lastName                  String?          // Opcional para OAuth
  name                      String? // Para NextAuth
  emailVerified             DateTime? // Para NextAuth
  image                     String? // Para NextAuth
  profileImage              String?
  bio                       String?
  phoneNumber               String?
  createdAt                 DateTime         @default(now())
  updatedAt                 DateTime         @updatedAt
  isVerified                Boolean          @default(false)
  verifiedIdentity          Boolean          @default(false) // Verificación de identidad con DNI
  verificationToken         String?
  resetToken                String?
  resetTokenExpiry          DateTime?
  // Stripe Connect fields
  stripeAccountId           String?          @unique // Stripe Connect account ID
  stripeOnboarded           Boolean          @default(false) // Si completó el onboarding de Stripe
  stripeCustomerId          String?          @unique // Stripe Customer ID para pagos
  // MercadoPago OAuth fields
  mercadopagoAccessToken    String?          @unique // Access token del vendedor para recibir pagos
  mercadopagoRefreshToken   String? // Refresh token para renovar el access token
  mercadopagoUserId         String? // User ID en MercadoPago
  mercadopagoConnected      Boolean          @default(false) // Si completó la autorización
  mercadopagoConnectedAt    DateTime? // Cuándo se conectó
  // NextAuth Relations
  accounts                  Account[]
  sessions                  Session[]
  // Relations - Items
  bookings                  Booking[]        @relation("Borrower")
  receivedBookings          Booking[]        @relation("Owner")
  ownedItems                Item[]
  // Relations - Services
  servicesProvided          Service[]
  serviceBookingsAsClient   ServiceBooking[] @relation("ServiceClient")
  serviceBookingsAsProvider ServiceBooking[] @relation("ServiceProvider")
  serviceReviewsGiven       ServiceReview[]  @relation("ServiceReviewsGiven")
  serviceReviewsReceived    ServiceReview[]  @relation("ServiceReviewsReceived")
  // Relations - General
  receivedMessages          Message[]        @relation("Receiver")
  messages                  Message[]        @relation("Sender")
  notifications             Notification[]
  receivedReviews           Review[]         @relation("Reviewee")
  reviews                   Review[]         @relation("Reviewer")
  verifications             Verification[]
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Item {
  id          String    @id @default(uuid())
  title       String
  description String
  price       Float
  priceType   String    @default("day") // "hour" o "day" - para herramientas
  deposit     Float     @default(0)
  category    String
  subcategory String?
  location    String
  latitude    Float?
  longitude   Float?
  features    String[]
  images      String[]
  isAvailable Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  ownerId     String
  bookings    Booking[]
  owner       User      @relation(fields: [ownerId], references: [id])
  reviews     Review[]

  @@index([ownerId])
  @@index([category])
  @@index([isAvailable])
  @@index([createdAt(sort: Desc)])
}

model Service {
  id             String           @id @default(uuid())
  title          String
  description    String
  pricePerHour   Float? // Precio por hora (opcional si es precio variable)
  priceType      String           @default("hour") // "hour" o "custom" (depende del trabajo)
  isProfessional Boolean          @default(false) // Badge de matriculado/profesional
  category       String
  subcategory    String?
  location       String
  latitude       Float?
  longitude      Float?
  serviceArea    String? // Radio o zona de servicio
  features       String[]
  images         String[]
  isAvailable    Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  providerId     String
  bookings       ServiceBooking[]
  provider       User             @relation(fields: [providerId], references: [id])
  reviews        ServiceReview[]

  @@index([providerId])
  @@index([category])
  @@index([isAvailable])
  @@index([createdAt(sort: Desc)])
}

model ServiceBooking {
  id          String         @id @default(uuid())
  startDate   DateTime
  endDate     DateTime? // Opcional para servicios
  hours       Float? // Horas estimadas
  customPrice Float? // Precio acordado si es custom
  status      BookingStatus  @default(PENDING)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  serviceId   String
  clientId    String
  providerId  String
  client      User           @relation("ServiceClient", fields: [clientId], references: [id])
  service     Service        @relation(fields: [serviceId], references: [id])
  provider    User           @relation("ServiceProvider", fields: [providerId], references: [id])
  review      ServiceReview?

  @@index([clientId])
  @@index([providerId])
  @@index([status])
  @@index([serviceId])
  @@index([createdAt(sort: Desc)])
}

model ServiceReview {
  id           String         @id @default(uuid())
  rating       Int
  comment      String
  response     String?
  responseDate DateTime?
  createdAt    DateTime       @default(now())
  serviceId    String
  reviewerId   String
  revieweeId   String
  bookingId    String         @unique
  booking      ServiceBooking @relation(fields: [bookingId], references: [id])
  service      Service        @relation(fields: [serviceId], references: [id])
  reviewer     User           @relation("ServiceReviewsGiven", fields: [reviewerId], references: [id])
  reviewee     User           @relation("ServiceReviewsReceived", fields: [revieweeId], references: [id])
}

model Category {
  id            String        @id @default(uuid())
  nombre        String        @unique
  descripcion   String?
  imagen        String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  subcategorias Subcategory[]
}

model Subcategory {
  id          String   @id @default(uuid())
  nombre      String
  descripcion String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
}

model Booking {
  id         String        @id @default(uuid())
  startDate  DateTime
  endDate    DateTime
  totalPrice Float         @default(0)
  status     BookingStatus @default(PENDING)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  itemId     String
  borrowerId String
  ownerId    String
  borrower   User          @relation("Borrower", fields: [borrowerId], references: [id])
  item       Item          @relation(fields: [itemId], references: [id])
  owner      User          @relation("Owner", fields: [ownerId], references: [id])
  // payment    Payment?   // Comentado - para futuras funcionalidades de pago
  review     Review?

  @@index([borrowerId])
  @@index([ownerId])
  @@index([status])
  @@index([itemId])
  @@index([createdAt(sort: Desc)])
}

model Review {
  id           String    @id @default(uuid())
  rating       Int
  comment      String
  response     String?
  responseDate DateTime?
  createdAt    DateTime  @default(now())
  itemId       String
  reviewerId   String
  revieweeId   String
  bookingId    String    @unique
  booking      Booking   @relation(fields: [bookingId], references: [id])
  item         Item      @relation(fields: [itemId], references: [id])
  reviewee     User      @relation("Reviewee", fields: [revieweeId], references: [id])
  reviewer     User      @relation("Reviewer", fields: [reviewerId], references: [id])

  @@index([itemId])
  @@index([revieweeId])
  @@index([createdAt(sort: Desc)])
}

