generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String         @id @default(uuid())
  email             String         @unique
  password          String
  firstName         String
  lastName          String
  profileImage      String?
  bio               String?
  phoneNumber       String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  isVerified        Boolean        @default(false)
  verificationToken String?
  resetToken        String?
  resetTokenExpiry  DateTime?
  // Stripe Connect fields
  stripeAccountId   String?        @unique // Stripe Connect account ID
  stripeOnboarded   Boolean        @default(false) // Si completó el onboarding de Stripe
  stripeCustomerId  String?        @unique // Stripe Customer ID para pagos
  // MercadoPago OAuth fields
  mercadopagoAccessToken  String?  @unique // Access token del vendedor para recibir pagos
  mercadopagoRefreshToken String?  // Refresh token para renovar el access token
  mercadopagoUserId       String?  // User ID en MercadoPago
  mercadopagoConnected    Boolean  @default(false) // Si completó la autorización
  mercadopagoConnectedAt  DateTime? // Cuándo se conectó
  // Relations
  bookings          Booking[]      @relation("Borrower")
  receivedBookings  Booking[]      @relation("Owner")
  ownedItems        Item[]
  receivedMessages  Message[]      @relation("Receiver")
  messages          Message[]      @relation("Sender")
  notifications     Notification[]
  receivedReviews   Review[]       @relation("Reviewee")
  reviews           Review[]       @relation("Reviewer")
}

model Item {
  id          String    @id @default(uuid())
  title       String
  description String
  price       Float
  deposit     Float
  category    String
  subcategory String?
  location    String
  features    String[]
  images      String[]
  isAvailable Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  ownerId     String
  bookings    Booking[]
  owner       User      @relation(fields: [ownerId], references: [id])
  reviews     Review[]
}

model Category {
  id            String        @id @default(uuid())
  nombre        String        @unique
  descripcion   String?
  imagen        String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  subcategorias Subcategory[]
}

model Subcategory {
  id          String   @id @default(uuid())
  nombre      String
  descripcion String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
}

model Booking {
  id         String        @id @default(uuid())
  startDate  DateTime
  endDate    DateTime
  totalPrice Float
  status     BookingStatus @default(PENDING)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  itemId     String
  borrowerId String
  ownerId    String
  borrower   User          @relation("Borrower", fields: [borrowerId], references: [id])
  item       Item          @relation(fields: [itemId], references: [id])
  owner      User          @relation("Owner", fields: [ownerId], references: [id])
  payment    Payment?
  review     Review?
}

model Review {
  id           String    @id @default(uuid())
  rating       Int
  comment      String
  response     String?
  responseDate DateTime?
  createdAt    DateTime  @default(now())
  itemId       String
  reviewerId   String
  revieweeId   String
  bookingId    String    @unique
  booking      Booking   @relation(fields: [bookingId], references: [id])
  item         Item      @relation(fields: [itemId], references: [id])
  reviewee     User      @relation("Reviewee", fields: [revieweeId], references: [id])
  reviewer     User      @relation("Reviewer", fields: [reviewerId], references: [id])
}

model Payment {
  id                    String        @id @default(uuid())
  amount                Float         // Monto total del pago
  status                PaymentStatus @default(PENDING)
  // Stripe fields
  stripePaymentIntentId String?       @unique // Stripe PaymentIntent ID
  stripeTransferId      String?       // Stripe Transfer ID al owner
  stripeChargeId        String?       // Stripe Charge ID
  capturedAt            DateTime?     // Cuándo se capturó el pago
  refundedAt            DateTime?     // Cuándo se hizo refund
  refundAmount          Float?        // Monto reembolsado
  // MercadoPago fields
  mercadopagoPreferenceId String?     // ID de preferencia de MercadoPago
  mercadopagoPaymentId    String?     @unique // ID del pago en MercadoPago
  mercadopagoStatus       String?     // Estado del pago en MP (approved, pending, rejected, etc)
  // Marketplace fields
  marketplaceFee        Float?        // Comisión del marketplace (5%)
  ownerAmount           Float?        // Monto que recibe el propietario
  marketplaceAmount     Float?        // Monto que recibe el marketplace
  // General fields
  paymentProvider       String        @default("stripe") // "stripe" | "mercadopago"
  paidAt                DateTime?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  bookingId             String        @unique
  booking               Booking       @relation(fields: [bookingId], references: [id])
}

model Notification {
  id        String           @id @default(uuid())
  type      NotificationType
  title     String
  content   String
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  userId    String
  user      User             @relation(fields: [userId], references: [id])
  // Enlaces relacionados
  bookingId String?
  itemId    String?
  actionUrl String?
  // Datos adicionales para el contexto
  metadata  Json?
}

model Message {
  id         String   @id @default(uuid())
  content    String
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())
  senderId   String
  receiverId String
  bookingId  String?   // Para asociar mensajes con reservas
  receiver   User     @relation("Receiver", fields: [receiverId], references: [id])
  sender     User     @relation("Sender", fields: [senderId], references: [id])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  REFUNDED
  FAILED
}

enum NotificationType {
  BOOKING_REQUEST
  BOOKING_CONFIRMED
  BOOKING_CANCELLED
  BOOKING_COMPLETED
  PAYMENT_RECEIVED
  REVIEW_RECEIVED
  MESSAGE_RECEIVED
}


